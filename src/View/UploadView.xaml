<UserControl x:Class="Transmission.Client.View.UploadView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Transmission.Client.View"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel>
            <TextBox Text="{Binding MagnetLink, UpdateSourceTrigger=PropertyChanged}" />
            <CheckBox IsChecked="{Binding DoStart}">
                <TextBlock Text="Start when uploaded" />
            </CheckBox>
            <StackPanel Orientation="Horizontal">
                <Button Command="{Binding AddMagnetLinkCommand}" Content="Add Magnet Link" />
                <Button Command="{Binding UploadMagnetLinkCommand}" Content="Upload Magnet Link" />
                <Button Command="{Binding UploadObjectsCommand}" Content="Upload Below Objects" />
            </StackPanel>
            <TextBlock Background="Aqua" Width="200" Height="200" DragEnter="Upload_DragEnter" DragOver="Upload_DragOver" Drop="Upload_Drop" IsHitTestVisible="True" AllowDrop="True" />
            <ListView ItemsSource="{Binding Objects}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Label Content="{Binding Name}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>
    </Grid>
</UserControl>
